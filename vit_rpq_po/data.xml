<odoo>
  <data>
      <record id="purchase_order_form" model="ir.ui.view">
          <field name="name">purchase.order.form</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_form"/>
          <field name="priority" eval ="8" />
          <field name="arch" type="xml">
              <field name="analytic_tag_ids" position="replace">
                <field name="lokasi" groups="analytic.group_analytic_tags"  options="{'color_field': 'color'}"/>
                <field name="bisniss" groups="analytic.group_analytic_tags" options="{'color_field': 'color'}"/>
              </field>
          </field>
      </record>
  </data>
</odoo>